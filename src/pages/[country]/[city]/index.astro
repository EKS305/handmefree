---
export const prerender = false;

const { country, city } = Astro.params;

// Simple normalization (SEO-friendly display)
const cityName = city.charAt(0).toUpperCase() + city.slice(1);
const countryName =
  country === "de" ? "Germany" :
  country === "fr" ? "France" :
  country.toUpperCase();

const title = `Free items in ${cityName} | HandMeFree`;
const description = `Find free items in ${cityName}, ${countryName}. Give things away or get items for free locally and anonymously on HandMeFree.`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
  </head>

  <body>
    <main style="max-width: 720px; margin: 4rem auto; font-family: system-ui;">
      <nav>
        <a href="/">Home</a> ›
        <a href={`/${country}/`}>{countryName}</a> ›
        <span>{cityName}</span>
      </nav>

      <h1>Free items in {cityName}</h1>

      <p>
        Welcome to <strong>HandMeFree {cityName}</strong>.  
        Here people give items away for free — locally and anonymously.
      </p>

      <p>
        Browse available items or post something you want to give away.
        No accounts. No payments. No profiles.
      </p>
    </main>
  </body>
</html>
