---
const title = "HandMeFree – Give items away for free in your city";
const description =
  "HandMeFree is a free, anonymous platform where people give items away locally. No accounts, no money, just reuse.";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Basic SEO -->
    <meta name="robots" content="index, follow" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

  </head>
  <body>
    <main style="max-width: 720px; margin: 4rem auto; font-family: system-ui;">
      <h1>Give items away for free — locally & anonymously</h1>

      <p>
        <strong>HandMeFree</strong> helps people give items away for free in their city.
        No accounts. No profiles. No payments.
      </p>

      <p>
        Post what you want to give, people nearby show interest, and you choose
        who gets it. Simple, local, and anonymous.
      </p>

      <p>
        This project is currently in early development.
      </p>
    </main>
  </body>
</html>
