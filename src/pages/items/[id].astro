---
const { id } = Astro.params;
const API = "https://handmefree-post-item.ehsankarimi27.workers.dev";

let item = null;
let error = null;

try {
  const res = await fetch(`${API}/item?id=${id}`);
  const data = await res.json();
  if (!data.ok) throw new Error();
  item = data.item;
} catch {
  error = "Item not found";
}
---

{error && <p style="color:red">{error}</p>}

{item && (
  <>
    <h1>{item.title}</h1>
    <p>{item.description}</p>
    <small>Posted: {new Date(item.createdAt).toLocaleString()}</small>

    <hr />

    <h3>Add an image</h3>

    <form
      id="uploadForm"
      data-item-id={id}
      data-api={API}
    >
      <input type="file" name="image" required />
      <button type="submit">Upload image</button>
    </form>

    <script>
      const form = document.getElementById("uploadForm");
      const api = form.dataset.api;
      const itemId = form.dataset.itemId;

      form.addEventListener("submit", async (e) => {
        e.preventDefault();

        const fd = new FormData(form);
        fd.append("itemId", itemId);

        const res = await fetch(`${api}/upload-image`, {
          method: "POST",
          body: fd,
        });

        if (!res.ok) {
          alert("Upload failed (network)");
          return;
        }

        const data = await res.json();

        if (!data.ok) {
          alert("Upload failed (server)");
        } else {
          alert("Image uploaded successfully");
        }
      });
    </script>
  </>
)}
